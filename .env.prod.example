# MODE
APP_MODE=prod

#DEMO PASSWORD
DEMO_BASIC_AUTH_PASSWORD=demo

# ============================================================
# DATABASE
# ============================================================

DATABASE_URL=

# ============================================================
# LLM PROVIDER CONFIG
# ============================================================

# Primary LLM provider (gemini, openai, groq, etc.)
LLM_PROVIDER=gemini

# Primary API key used by the active provider
LLM_API_KEY=

# Gemini-specific model (used when LLM_PROVIDER=gemini)
GEMINI_MODEL=gemini-2.5-flash

# (Optional legacy fallback — not required if LLM_API_KEY is set)
# GEMINI_API_KEY=YOUR_OLD_GEMINI_KEY


# ============================================================
# GOOGLE OAUTH — DESKTOP APP FLOW
# ============================================================

# From Google Cloud Console → OAuth Client (Desktop App)
GOOGLE_CLIENT_ID=

# Path to the OAuth client secret JSON file
GOOGLE_CLIENT_SECRET_FILE=client_secret.json

# Token file generated after OAuth flow
GOOGLE_TOKEN_FILE=token.json

# Comma-separated scopes
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/drive.readonly,https://www.googleapis.com/auth/gmail.readonly


# Calendar ID (usually "primary")
GOOGLE_CALENDAR_ID=primary



# (Optional legacy fallback — only used if GOOGLE_CLIENT_SECRET_FILE is empty)
# GOOGLE_CREDENTIALS_PATH=credentials.json


# ============================================================
# HUBSPOT
# ============================================================

HUBSPOT_API_KEY=


# ============================================================
# ZOOM — SERVER-TO-SERVER OAUTH
# ============================================================

ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=

